@using JobTrackerApp.WebMVC.Models
@model AuthenticationViewModel

@{
    ViewBag.Title = "Home Page";
}

@*Email: test@test.com
    Password: Test123!*@

<header>
    <ul class="header-menu">
        <li>
            <div id="header-login-wrapper">
                <p id="header-login-button">Log In</p>
            </div>
        </li>
        <li id="header-register-button">Sign Up</li>
    </ul>
</header>

<div id="content-wrapper">
    <div id="login-section" style="display: none">
        @* Login Section *@
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.TextBoxFor(m => m.Login.Email, new { @class = "login-user-info", @placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.Login.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Login.Password, new { @class = "login-user-info", @placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Login.Password, "", new { @class = "text-danger" })
                @Html.ActionLink("ForgotPassword?", "ForgotPassword", "Account", routeValues: null, htmlAttributes: new { @id = "forgot-password" })
            </div>
            <button type="submit" value="Log In" id="btn-top">Log In</button>
        }
    </div>

    <div id="register-section">
        @* Register Section *@
        @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.TextBoxFor(m => m.Register.Email, new { @class = "register-user-info", @placeholder = "Email" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Register.Password, new { @class = "register-user-info", @placeholder = "Password" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Register.ConfirmPassword, new { @class = "register-user-info", @placeholder = "Confirm Password" })
            </div>
            <button type="submit" value="Register" id="btn-top">Register</button>
        }
    </div>
</div>